<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Archetype Created Web Application</display-name>
    <!-- IMPORTANT ! This line defines the default controller : -->
    <servlet-mapping>
        <servlet-name>CatalogServlet</servlet-name>
        <url-pattern>/catalog</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>accueil</welcome-file>
    </welcome-file-list>
    <!-- MongoDB parameters -->
    <context-param>
        <param-name>MONGODB_HOST</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <param-name>MONGODB_PORT</param-name>
        <param-value>27017</param-value>
    </context-param>
    <servlet>
        <servlet-name>Accueil</servlet-name>
        <servlet-class>fr.ensimag.biblio.controllers.AccueilServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Library</servlet-name>
        <servlet-class>fr.ensimag.biblio.controllers.Library</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>fr.ensimag.biblio.controllers.AddUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Users</servlet-name>
        <servlet-class>fr.ensimag.biblio.controllers.GetUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatImg</servlet-name>
        <servlet-class>fr.ensimag.biblio.controllers.StatImg</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatisticsServlet</servlet-name>
        <servlet-class>fr.ensimag.biblio.controllers.StatisticsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckUserServlet</servlet-name>
        <servlet-class>fr.ensimag.biblio.controllers.CheckUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutUserServlet</servlet-name>
        <servlet-class>fr.ensimag.biblio.controllers.LogoutUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BilanServlet</servlet-name>
        <servlet-class>fr.ensimag.biblio.controllers.BilanServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FactorialServlet</servlet-name>
        <servlet-class>fr.ensimag.biblio.controllers.FactorialServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ErrorServlet</servlet-name>
        <servlet-class>fr.ensimag.biblio.controllers.ErrorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CatalogServlet</servlet-name>
        <servlet-class>fr.ensimag.biblio.controllers.CatalogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Accueil</servlet-name>
        <url-pattern>/accueil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Library</servlet-name>
        <url-pattern>/library</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Users</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatImg</servlet-name>
        <url-pattern>/stat_img</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatisticsServlet</servlet-name>
        <url-pattern>/statistics</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckUserServlet</servlet-name>
        <url-pattern>/check_user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutUserServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BilanServlet</servlet-name>
        <url-pattern>/bilan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FactorialServlet</servlet-name>
        <url-pattern>/factorial</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErrorServlet</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <!-- error-code related error pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error</location>
    </error-page>
    <!-- exception-type related error pages -->
    <error-page>
        <exception-type>
            javax.servlet.ServletException
        </exception-type>
        <location>/error</location>
    </error-page>
</web-app>
